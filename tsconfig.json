{
  "root": true,
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES2015",
      "ES2015.Iterable",
      "DOM"
    ],
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "encodeHooks": [
        "./packages/hooks/src/index.ts"
      ],
      "encode-hooks": [
        "./packages/hooks/src/index.ts"
      ],
      "encodeHooks/lib/*": [
        "./packages/hooks/src/*"
      ],
      "encode-hooks/lib/*": [
        "./packages/hooks/src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "example"
  ]
}